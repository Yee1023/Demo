	.loadingbox{
		width: 300px;
		height: 300px;
		margin: 10px auto;
		border: 1px solid #f00;
		text-align: center;
	}
	.circle{
	    width: 200px;
	    height: 200px;
	    margin: 25px auto;
	    border-radius: 50%;
		border: 25px solid #c3e2df;
		vertical-align: middle;
	}
	.circleleft, .circleright{
		width: 125px;
    	height: 250px;
		position: relative;
		overflow: hidden;
	}
	.circleleft{
		top: -25px;
    	left: -25px;
	}
	.circleright{
		top: -275px;
    	left: 100px;
	}
	.circleleft div, .circleright div{
	    width: 200px;
	    height: 200px;
	    border-radius: 50%;
		border: 25px solid #c3e2df;
	}
	.circleleft div{
		border-right: 25px solid #459b3a;
	    border-top: 25px solid #459b3a;
	    transform: rotate(45deg);
	}
	.circleright div{
		position: relative;
		left: -125px;
		border-left: 25px solid #459b3a;
	    border-bottom: 25px solid #459b3a;
	    transform: rotate(45deg);
	}
	.progressbox{
		width: 300px;
		height: 100px;
		margin: 10px auto;
		border: 1px solid #0f0;
		text-align: center;
	}
	.progress{
		width: 200px;
		height: 20px;
		margin: 30px auto;
		border: 1px solid #f00;
