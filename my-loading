<body>
	<div class="loadingbox">
		<div class="circle">
			<div class="circleleft">
				<div id="leftcircle"></div>
			</div>
			<div class="circleright">
				<div id="rightcircle"></div>
			</div>
		</div>
	</div>
	<div class="progressbox">
		<div class="progress"><span id="progressbar">0%</span></div>
	</div>
	<form action="/" id="subchange">
		<label>输入进度值：<input type="text" name="progress" id="provalue" value="0"></label>
		<button type="button" id="changepro">确认</button>
	</form>
</body>
<script type="text/javascript">
	var left = document.getElementById('leftcircle')
	var right = document.getElementById('rightcircle')
	var probar = document.getElementById('progressbar')
	document.getElementById('subchange').onsubmit = function () {
		right.style.transform = 'rotate(45deg)'
		left.style.transform = 'rotate(45deg)'
		var progress = document.getElementById('provalue').value
		probar.style.width = progress*100+'%'
		probar.innerHTML = progress*100+'%'
		if (progress==0.5) {
			right.style.transform = 'rotate(225deg)'
		} else if (progress>0.5) {
			right.style.transform = 'rotate(225deg)'
			left.style.transform = 'rotate('+(45+progress*360-180)+'deg)'
		} else {
			right.style.transform = 'rotate('+(45+progress*180)+'deg)'
		}
		return false
	}
	document.getElementById('changepro').onclick = function () {
		right.style.transform = 'rotate(45deg)'
		left.style.transform = 'rotate(45deg)'
		var progress = document.getElementById('provalue').value
		probar.style.width = progress*100+'%'
		probar.innerHTML = progress*100+'%'
		if (progress==0.5) {
			right.style.transform = 'rotate(225deg)'
		} else if (progress>0.5) {
			right.style.transform = 'rotate(225deg)'
			left.style.transform = 'rotate('+(45+progress*360-180)+'deg)'
		} else {
			right.style.transform = 'rotate('+(45+progress*180)+'deg)'
		}
	}
</script>
